<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous" />
    <link href="../public/assets/style.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet" />
    <link rel="icon" type="image/x-icon" href="../public/assets/cwicon.png">
    <title>Uploading Database</title>
</head>

<body>
    <%- include('header.ejs') %>
    <div class="container">
        <h1 class="mb-4 mt-4">Upload to Database</h1>
        <a href="/insertdata" class="btn btn-info mt-2">Click Here To Insert Data</a>
        <a href="/checkdata" class="btn btn-info mt-2">Click Here to Check Data</a>
        <a href="/createTelegramPost" class="btn btn-info mt-2">Click Here Telegram Post Generation</a>
        <a href="/sqlquery" class="btn btn-info mt-2">Click Here for Custom Query</a>
        <a href="/" class="btn btn-success mt-2">Click Here To go to Home</a>
        <a href="/logout" class="btn btn-success mt-2">Click Here To Logout</a>
        <div class="form-group mt-3">

            <form action="/inserting" method="POST" id="f1">
                <label for="tn">Topic Name</label>
                <input type="text" name="tn" id="i1" placeholder="Topic Name" required class="form-control">

                <label for="cat" class="mt-3">Category Name</label>
                <select type="text" name="cat" id="i3" required class="form-control">
                    <% for(let i=0; i<category.length;i++){ %>
                        <option value="<%=category[i].category%>">
                            <%=category[i].category%>
                        </option>
                        <% } %>
                </select>
                <!-- <input type="text" name="cat" id="i3"  required class="form-control">  -->

                <label for="ln" class="mt-3">Link</label>
                <input type="text" name="ln" id="i2" placeholder="Link of the content" required class="form-control">

                <label for="com" class="mt-3">Company Name</label>
                <select type="text" name="com" id="i4" required class="form-control">
                    <% for(let i=0; i<company.length;i++){ %>
                        <option value="<%=company[i].company%>">
                            <%=company[i].company%>
                        </option>
                        <% } %>
                </select>

                <label for="lan" class="mt-3">Language Specific</label>
                <select type="text" name="lan" id="i5" required class="form-control">
                    <% for(let i=0; i<language.length;i++){ %>
                        <option value="<%=language[i].language%>">
                            <%=language[i].language%>
                        </option>
                        <% } %>
                </select>
                <label for="dou" class="mt-3">Date of Upload</label>
                <input type="date" name="dou" id="i6" value="2022-12-10" required class="form-control">

                <label for="ub" class="mt-3">Uploaded by</label>
                <select type="text" name="ub" id="i7" required class="form-control">
                    <% for(let i=0; i<authors.length;i++){ %>
                        <option value="<%=authors[i].authors%>">
                            <%=authors[i].authors%>
                        </option>
                        <% } %>
                </select>
                <label for="toc" class="mt-3">Type of Conetent</label>
                <select type="text" name="toc" id="i8" required class="form-control">
                    <% for(let i=0; i<type.length;i++){ %>
                        <option value="<%=type[i].typeofcontent%>">
                            <%=type[i].typeofcontent%>
                        </option>
                        <% } %>
                </select>
                <label for="pap" class="mt-3">Post Authentication password</label>
                <input type="password" name="pap" id="i9" required class="form-control">

                <button type="submit" class="mt-4 btn btn-primary">Click Here To Upload</button>
            </form>

        </div>
    </div>
</body>

</html>